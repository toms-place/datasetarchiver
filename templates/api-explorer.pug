doctype html
// HTML for static distribution bundle build
head
  meta(charset='UTF-8')
  title datasetarchiver api docu
  link(rel='stylesheet' type='text/css' href=`${basePath}/api-explorer/swagger-ui.css`)
  link(rel='icon' type='image/png' href=`${basePath}/api-explorer/favicon-32x32.png` sizes='32x32')
  link(rel='icon' type='image/png' href=`${basePath}/api-explorer/favicon-16x16.png` sizes='16x16')
  style.
    html {
    box-sizing: border-box;
    overflow: -moz-scrollbars-vertical;
    overflow-y: scroll;
    }
    *,
    *:before,
    *:after {
    box-sizing: inherit;
    }
    body {
    margin: 0;
    background: #fafafa;
    }
#swagger-ui
script(src=`${basePath}/api-explorer/swagger-ui-bundle.js`)
script(src=`${basePath}/api-explorer/swagger-ui-standalone-preset.js`)
script.
  window.onload = function() {
  // Begin Swagger UI call region
  const ui = SwaggerUIBundle({
  url: window.location.origin + "#{basePath}/api/v1/spec",
  dom_id: '#swagger-ui',
  deepLinking: true,
  presets: [SwaggerUIBundle.presets.apis, SwaggerUIStandalonePreset],
  plugins: [SwaggerUIBundle.plugins.DownloadUrl],
  layout: 'StandaloneLayout',
  });
  // End Swagger UI call region
  window.ui = ui;
  };
