{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "esModuleInterop": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src/client",
    "typeRoots": ["node_modules/@types", "src/@types"],
    "resolveJsonModule":true,
    "noImplicitAny": true,
    "jsx": "react"
  },
  "include": ["src/client/**/*.tsx", "src/client/**/*.ts", "src/@types/**/*.ts"],
  "exclude": ["node_modules"]
}
